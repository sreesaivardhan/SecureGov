{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "securegov-client",
  "version": "1.0.0",
  "description": "SecureGov - Government Document Management System",
  "main": "index.html",
  "scripts": {
    "start": "live-server --port=3000",
    "dev": "live-server --port=3000 --watch=.",
    "test": "mocha tests/unit/**/*.test.js --timeout 10000",
    "test:watch": "mocha tests/unit/**/*.test.js --watch",
    "test:coverage": "nyc mocha tests/unit/**/*.test.js",
    "test:integration": "mocha tests/integration/**/*.test.js --timeout 30000"
  },
  "dependencies": {
    "gridfs-stream": "^1.1.1",
    "joi": "^18.0.1",
    "mongodb": "^6.19.0",
    "mongoose": "^8.18.1",
    "multer": "^1.4.4",
    "multer-gridfs-storage": "^5.0.2"
  },
  "devDependencies": {
    "live-server": "^1.2.2",
    "mocha": "^10.2.0",
    "chai": "^4.3.7",
    "sinon": "^15.2.0",
    "supertest": "^6.3.3",
    "nyc": "^15.1.0",
    "puppeteer": "^21.0.0"
  },
  "keywords": [
    "government",
    "documents",
    "security",
    "aadhaar",
    "pan",
    "firebase"
  ],
  "author": "SecureGov Team",
  "license": "MIT"
}
